<div class="hero min-h-screen bg-base-200">
  <div class="text-center">
    <h1 class="text-4xl font-bold mb-6">生成結果一覧</h1>

    <div class="overflow-x-auto">
      <table class="table w-full">
        <!-- ヘッダー -->
        <thead>
          <tr>
            <th class="bg-base-300">ドリンク名</th>
            <th class="bg-base-300">ドリンク言葉</th>
            <th class="bg-base-300">操作</th>
          </tr>
        </thead>
        <!-- テーブルのボディ -->
        <tbody>
          <% @bookmarks.each do |result| %>
            <tr>
              <td><%= result.generated_drink %></td>
              <td><%= result.generated_word %></td>
              <td>
                <%= link_to '詳細を見る', bookmark_path(result), class: "btn btn-primary btn-sm" %>
                <%= link_to '削除',  bookmark_path(result), method: :delete, data: { confirm: '本当に削除しますか？' }, class: "btn btn-danger btn-sm" %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>