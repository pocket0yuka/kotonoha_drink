<!-- ナビゲーションバー(ログイン中) -->
<header>
  <div class="drawer z-20 relative">
    <input id="my-drawer-3" type="checkbox" class="drawer-toggle" /> 
    <div class="drawer-content">
      <!-- Navbar -->
      <div class="w-full navbar bg-white justify-between"> 
        <div class="flex-none ">
          <label for="my-drawer-3" aria-label="open sidebar" class="btn btn-square btn-ghost">
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" class="inline-block w-6 h-6 stroke-current"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path></svg>
          </label>
      </div> 
      <div class="flex-1 px-2 mx-2 max-sm:hidden">
        <%= link_to root_path do %>
          <%= image_tag 'kotonoha_logo.png',size: '170x170' , class: " object-cover transition duration-500 ease-in-out transform hover:scale-105" %>
        <% end %>
      </div>
        <%= form_with url: generatedresults_path, method: :get, local: true, id: 'drink-search-form' do |form| %>
          <%= form.text_field :keyword, placeholder: "ドリンク名を入力", class: "text-sm text-green-700 border border-emerald-700 bg-slate-50 input input-bordered input-md w-full max-w-lg" %>
          <%= form.submit "作成", class: "btn btn-primary" %>
        <% end %>
        <div class="flex-none hidden md:block">
          <ul class="menu menu-horizontal">
            <!-- Navbar menu content here -->
            <li>
              <a href="<%= drinks_path %>">
                <i class="fa-solid fa-book-open fa-sm "></i>メニュー表
              </a>
            </li>
          </ul>
        </div>
      </div>
    </div> 
    <div class="drawer-side z-20	z-index: 20;">
      <label for="my-drawer-3" aria-label="close sidebar" class="drawer-overlay"></label> 
      <ul class="menu p-4 w-80 min-h-full bg-stone-300">
        <!-- Sidebar content here -->
        <li>
        <a href="<%= root_path %>">
          <i class="fa-solid fa-house fa-sm"></i>ホーム
        </a>
        </li>
        <li>
          <a href="<%= drinks_path %>">
            <i class="fa-solid fa-book-open fa-sm"></i>メニュー表
          </a>
        </li>
        <li>
          <a href="<%= bookmarks_path %>">
          <i class="fa-regular fa-bookmark fa-sm"></i>保存したドリンク
          </a>
        </li>
        <li>
          <a href="<%= generatedresult_path %>">
            <i class="fa-solid fa-bell-concierge fa-sm"></i>ドリンクを注文する
          </a>
        </li>
        <li>
            <a href="<%= new_post_path %>">
            <i class="fa-solid fa-pen fa-sm"></i>投稿
          </a>
        </li>
        <li>
            <a href="<%= profile_path %>">
            <i class="fa-solid fa-gear fa-sm"></i>設定・通知
          </a>
        </li>
        <li>
          <%= link_to destroy_user_session_path, method: :delete do %>
            <i class="fa-solid fa-right-from-bracket fa-sm"></i>ログアウト
          <% end %>
        </li>
      </ul>
    </div>
  </div>
</header>