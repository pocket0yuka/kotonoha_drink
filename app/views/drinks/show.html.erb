<div class="hero min-h-screen bg-gray-100">
  <%= render "shared/loading" %>
  <div class="hero-content flex-col ">
    <!-- 画像の表示 -->
    <div class="max-w-md mx-auto">
      <% if @drink.image.present? %>
        <%= image_tag @drink.image.url, class: "rounded-lg shadow-2xl" %>
      <% else %>
        <%= image_tag "kotonoha_drink logo.png", size: '250x250', class: "rounded-lg shadow-2xl" %>
      <% end %>
    </div>

    <!-- カード -->
    <div class="card w-full bg-white shadow-xl max-w-lg mx-auto">
      <div class="card-body p-4 sm:p-6">
        <div class="relative">
          <div class="absolute top-1 right-2">
            <div class="tooltip tooltip-bottom" data-tip="投稿">
              <%= link_to posts_path(tag_names: @drink.name, drink_word: @drink.word), class: "btn bg-indigo-500 hover:bg-indigo-400 text-white" do %>
                <i class="fa-solid fa-pen fa-sm"></i>
              <% end %>
            </div>
          </div>
        </div>
        
        <h2 class="card-title text-4xl mb-4">ドリンク情報</h2>

        <div class="mb-4">
          <span class="text-lg"><strong>ドリンク名:</strong> <%= @drink.name %></span>
        </div>

        <div class="mb-4">
          <p class="text-lg"><strong>ドリンク言葉:</strong> <%= @drink.word %></p>
        </div>

        <div class="mb-4">
          <p class="text-lg"><strong>ドリンク情報:</strong> <%= @drink.info %></p>
        </div>

        <button class="btn btn-outline btn-info bg-black hover:bg-gray-800 text-white">
          <%= link_to "https://twitter.com/intent/tweet?url=#{CGI.escape(request.url)}&text=#{CGI.escape("#{@drink.name}のドリンク言葉は#{@drink.word}らしいよ〜")}", title: 'Twitter', target: '_blank', class: "flex items-center" do %>
            <i class="fa-brands fa-square-x-twitter fa-lg"></i>にも投稿する？
          <% end %>
        </button>

      </div>
    </div>
  </div>
</div>