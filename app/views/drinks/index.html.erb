<div class="min-h-screen bg-gray-100 p-4">
  <%= render "shared/loading" %>
  <%= paginate @categories, window: 1, outer_window: 0 %>
  <% @categories.each do |category| %>
    <div class="max-w-4xl mx-auto bg-white shadow-lg rounded-lg overflow-hidden my-4">
      <h2 class="text-2xl font-bold text-purple-700 p-4"><%= I18n.t("activerecord.attributes.drink.category.#{category.category}") %></h2>
      <ul class="list-disc list-inside p-4">
        <% @drinks.each do |drink| %>
          <li class="py-2 border-b border-gray-200">
            <%= link_to drink.name, drink_path(drink), class: " text-blue-500 hover:text-blue-600"%>
          </li>
        <% end %>
      </ul>
    </div>
  <% end %>
</div>