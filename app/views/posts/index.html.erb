<div class="min-h-screen flex flex-wrap items-center justify-center">
  <%= render "shared/loading" %>
  <!-- Your existing content here -->
  <div class="w-full max-w-2xl">
    <h1 class="text-center text-4xl p-2 text-gray-700 font-semibold">みんなの投稿</h1>
    <div class="p-4 bg-zinc-400 sticky top-0 z-10	z-index: 10;">
      <%= search_form_for @q, class: "form-control" do |f| %>
        <div class="flex gap-2 ">
          <div data-controller="autocomplete" data-autocomplete-url-value="/tags/search" role="combobox">
            <%= f.search_field :tags_name_cont,data: { autocomplete_target: 'input' },placeholder: "タグで検索" ,class: "input input-bordered input-primary w-full max-w-xs" %>
            <%= f.hidden_field :tags_name, data: { autocomplete_target: 'hidden' } %>
            <ul class="list-group bg-white absolute w-full md:text-sm max-w-max" data-autocomplete-target="results"></ul>
            <div class="absolute inset-y-0 left-0 flex items-center pointer-events-none pl-4"></div>
          </div>
          <%= f.submit "検索", class: "btn btn-primary" %>
          <%= link_to new_post_path, class: "btn bg-indigo-500 hover:bg-indigo-600 text-white ml-auto max-sm:hidden" do %>
            投稿フォームに戻る<i class="fa-solid fa-pen fa-sm"></i>
          <% end %>
          <%= link_to new_post_path, class: "btn bg-indigo-500 hover:bg-indigo-600 text-white ml-2 sm:hidden" do %>
            <i class="fa-solid fa-pen fa-sm"></i>
          <% end %>
        </div>
      <% end %>
    </div>
    <div>
      <% @posts.each do |post| %>
        <div class="chat chat-start w-5/6 mx-auto max-w-screen-xl">
          <div class="chat-image avatar">
            <div class="w-10 rounded-full">
              <%= image_tag post.user.avatar.url %>
            </div>
          </div>
          <div class="chat-header p-2">
            <%= post.user.name %>
            <time class="text-xs opacity-50"><%= l post.created_at, format: :short %></time>
            <!-- タグの表示 -->
            <% post.tags.each do |tag| %>
              <span class="tag bg-blue-200 text-blue-800 text-xs font-semibold mr-2 px-2.5 py-0.5 rounded dark:bg-blue-200 dark:text-blue-800 flex-wrap p-2">
                <%= tag.name %>
              </span>
            <% end %>
            <% if current_user == post.user %>
              <%= link_to post_path(post), method: :delete, data: { confirm: '本当に削除しますか？' } do %>
                <i class="fa-regular fa-trash-can fa-sm"></i>
              <% end %>
            <% end %>
          </div>
          <div class="chat-bubble"><%= post.body %></div>
          <%= render'favorites/favorite', post: post %>
        </div>
      <% end %>
    </div>
  </div>
</div>
