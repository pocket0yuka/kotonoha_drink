<div class="min-h-screen bg-teal-50 p-4">
  <% @categories.each_with_index do |(category, drinks), index| %>
    <div id="category-<%= index %>" class="p-5 mb-10 bg-white rounded shadow">
      <h2 class="text-2xl font-bold text-gray-700 mb-5"><%= category %></h2>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
        <% drinks.each do |drink| %>
          <div class="p-4 border border-gray-200 rounded hover:shadow-lg transition duration-300">
            <p class="text-lg text-gray-600 font-semibold">
              <%= link_to drink.name, drinkwords_path(keyword: drink.name, category: drink.category), class: "text-blue-500 hover:text-blue-700" %>
            </p>
            <!-- その他のドリンク情報をここに表示 -->
          </div>
        <% end %>
      </div>
    </div>
  <% end %>
</div>