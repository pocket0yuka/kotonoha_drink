<div class="hero min-h-screen bg-teal-50">

  <div>
    <h1>プロフィール</h1>
  </div>

  <div>
    <%= form_with model: @user, url: profile_path do |f| %>
      <div class="form-group">
        <%= f.label :name %>
        <%= f.text_field :name, class: "form-control mb-3" %>
      </div>
      <div class="form-group">
        <%= f.label :email %>
        <%= f.email_field :email, class: "form-control mb-3" %>
      </div>
      <div class="form-group">
        <%= f.label :favorite_drink %>
        <%= f.email_field :favorite_drink, class: "form-control mb-3" %>
      </div>
      <div class="form-group mb-3">
        <%= f.label :avatar %>
        <%= f.file_field :avatar, class: "form-control js-file-select-preview", accept: 'image/*', data: { target: '#preview-target' }  %>
      </div>
      <div class='form-group mb-3'>
          <%= image_tag @user.avatar.url %>
      </div>
      
      <%= f.submit  class: "btn btn-primary" %>
    <% end %>
  </div>

</div>