<div class="hero min-h-screen bg-teal-50 flex justify-center items-center">
  <%= form_with model: @user, url: profile_path, class: "bg-white p-8 rounded-lg shadow max-w-md mx-auto w-full" do |f| %>
    <div class="form-group mb-4">
      <%= image_tag @user.avatar.url, class: "rounded-full w-24 h-24 mx-auto mb-3" %>
      <%= f.label :avatar, class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= f.file_field :avatar, class: "form-input block w-full text-sm file:btn file:btn-primary", accept: 'image/*', data: { target: '#preview-target' } %>
    </div>

    <div class="form-group mb-4">
      <%= f.label :name, class: "block text-sm font-medium mb-1" %>
      <%= f.text_field :name, class: "input input-bordered w-full max-w-xs" %>
    </div>

    <div class="form-group mb-4">
      <%= f.label :email, class: "block text-sm font-medium mb-1" %>
      <%= f.email_field :email, class: "input input-bordered w-full max-w-xs" %>
    </div>

    <div class="form-group mb-6">
      <%= f.label :favorite_drink, class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= f.text_field :favorite_drink, class: "input input-bordered w-full max-w-xs" %>
    </div>

    <div class="p-8">
    <%= f.submit "更新する", class: "btn btn-primary w-full" %>
    </div>
  <% end %>
</div>